{
  "name": "ts-paths-transform",
  "version": "1.0.6",
  "main": "index.js",
  "repository": "git@github.com:jpb06/ts-paths-transform.git",
  "author": "jpb06 <jp.bois.06@outlook.fr>",
  "packageManager": "pnpm@7.1.8",
  "license": "MIT",
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json",
    "postbuild": "pnpm copy-package && pnpm copy-readme",
    "test": "jest",
    "test-changes": "jest --watch",
    "test-dev": "jest --watchAll --coverage --no-cache",
    "test-ci": "jest --ci --coverage",
    "lint": "eslint ./src",
    "sync-icons": "yarn generateReadmeIcons -h 70"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "prettyjson": "^1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@jest/types": "^29.0.1",
    "@swc/core": "^1.2.245",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/prettyjson": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.1",
    "jest-watch-typeahead": "^2.1.1",
    "prettier": "^2.7.1",
    "readme-package-icons": "^1.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
