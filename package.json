{
  "name": "ts-paths-transform",
  "version": "2.0.2",
  "main": "index.js",
  "repository": "git@github.com:jpb06/ts-paths-transform.git",
  "author": "jpb06 <jp.bois.06@outlook.fr>",
  "license": "MIT",
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json",
    "postbuild": "pnpm copy-package && pnpm copy-readme",
    "test": "jest",
    "test-changes": "jest --watch",
    "test-dev": "jest --watchAll --coverage --no-cache",
    "test-ci": "jest --ci --coverage",
    "lint": "eslint ./src",
    "type-check": "tsc --noEmit",
    "sync-icons": "pnpm generateReadmeIcons -h 50"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "prettyjson": "^1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@jest/types": "^29.4.0",
    "@swc/core": "^1.3.28",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/prettyjson": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^2.8.3",
    "readme-package-icons": "^1.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
